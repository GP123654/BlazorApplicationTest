    </div>

</div>


<hr />

<div style="margin-top:20px; margin-bottom: 20px">
<MudCarousel Class="mud-width-full" Style="height:350px;" TData="object" AutoCycle="true">
    <MudCarouselItem Transition="Transition.Slide">
        <div class="d-flex" style="height:100%">
            <img src="/images/Weather2.jpg" style="width:100%">
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="Transition.Fade">
        <div class="d-flex" style="height:100%">
            <img src="/images/Weather.jpg" style="width:100%">
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="Transition.Custom" CustomTransitionEnter="bounceIn" CustomTransitionExit="bounceOut">
        <div class="d-flex" style="height:100%">
            <img src="/images/StoreHead2.jpg" style="width:100%">
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="Transition.Custom" CustomTransitionEnter="backInDown" CustomTransitionExit="backOutDown">
        <div class="d-flex" style="height:100%">
            <img src="/images/Weather3.jpg" style="width:100%">
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="Transition.Custom" CustomTransitionEnter="rotateIn" CustomTransitionExit="rotateOut">
        <div class="d-flex" style="height:100%">
            <img src="/images/Flowers1.jpg" style="width:100%">
        </div>
    </MudCarouselItem>
</MudCarousel>
</div>


