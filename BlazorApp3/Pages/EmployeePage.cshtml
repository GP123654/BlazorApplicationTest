<style>

    /* body style */
    .body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        /*background:#0e0e0e;*/
    }

    /*  style */
    .container {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        width: 1000px;
        transform-style: preserve-3d;
        /*background: #1f32;*/
    }

        /*  style */
        .container .box {
            position: relative;
            width: 260px;
            height: 400px;
            margin: 30px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            /* background: rgba(255, 255, 255, 0.3);*/
            background: rgba(245, 25, 45, 0.2);
            border-radius: 25px;
            transform-style: preserve-3d;
            box-shadow: 0 4px 30px mediumPurple;
        }

            /*  style */
            .container .box::before {
                content: 'EMPLOYEE';
                position: absolute;
                top: 20px;
                left: 20px;
                font-size: 3em;
                font-weight: 900;
                color: black;
                font-style: italic;
                opacity: 0;
                transition: 0.5s;
            }

            /*  style */
            .container .box::after {
                content: 'INFO';
                position: absolute;
                bottom: 20px;
                right: 20px;
                font-size: 5em;
                font-weight: 900;
                color: black;
                font-style: italic;
                opacity: 0;
                transition: 0.5s;
            }

            /*  style */
            .container .box:hover::before,
            .container .box:hover::after {
                opacity: 0.04;
            }

            /*  style */
            .container .box .name {
                position: absolute;
                top: 0;
                left: 0;
                text-align: center;
                color: mediumpurple;
                width: 100%;
                transform-style: preserve-3d;
                transform: translate3d(0,0,75px);
                transition: 0.5s;
                opacity: 1;
                z-index: 10;
            }

            /*  style */
            .container .box:hover .name {
                top: 40px;
                opacity: 1;
            }

            /*  style */
            .container .box .info {
                position: absolute;
                bottom: 0;
                left: 50%;
                transform-style: preserve-3d;
                transform: translate3d(-50%,0,75px);
                color: #fff;
                background: #1b1b1b;
                padding: 10px 25px;
                border-radius: 30px;
                text-decoration: none;
                transition: 0.5s;
                opacity: 0;
                z-index: 10;
            }

            /*  style */
            .container .box:hover .info {
                bottom: 30px;
                opacity: 1;
            }

            /*  style */
            .container .box .circle {
                position: absolute;
                top: 50%;
                left: 50%;
                width: 220px;
                height: 220px;
                border-radius: 50%;
                transition: 0.5s;
                background: #fff;
                transform-style: preserve-3d;
                z-index: 10;
                opacity: 1;
                transform: translate3d(-50%,-50%,50px);
            }

            /*  style */
            .container .box .product {
                position: absolute;
                top: 50%;
                left: 50%;
                max-width: 240px;
                max-height: 220px;
                transition: 0.5s;
                z-index: 11;
                transform-style: preserve-3d;
                transform: translate3d(-50%,-50%,100px) rotate(-5deg);
            }

            /*  style */
            .container .box:hover .product {
                transform: translate3d(-50%,-50%,100px) rotate(-5deg);
            }

            /* the circle and button colour style */
            .container .box:nth-child(1) .circle,
            .container .box:nth-child(1) .info {
                background: #8E24AA;
            }

            .container .box:nth-child(2) .circle,
            .container .box:nth-child(2) .info {
                background: #7B1FA2;
            }

            .container .box:nth-child(3) .circle,
            .container .box:nth-child(3) .info {
                background: #6A1B9A;
            }

            .container .box:nth-child(4) .circle,
            .container .box:nth-child(4) .info {
                background: #7B1FA2;
            }

            .container .box:nth-child(5) .circle,
            .container .box:nth-child(5) .info {
                background: #8E24AA;
            }

            .container .box:nth-child(6) .circle,
            .container .box:nth-child(6) .info {
                background: #6A1B9A;
            }


    /****************************/

