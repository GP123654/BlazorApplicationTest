@code {

    //--------------------------------------------------------//
    //Bar Chart

    //If you want to know which bar has been clicked on
    private int Indexs = -1; //default value cannot be 0 -> first selectedindex is 0.

    //Populating the bar chart with default values
    public List<ChartSeries> Series = new List<ChartSeries>()
    {
        new ChartSeries() { Name = "Flowers", Data = new double[] { 40, 20, 25, 27} },
        new ChartSeries() { Name = "People", Data = new double[] { 19, 24, 35, 13 } },
    };

    //Labels for the X axis
    public string[] XAxisLabels = { "Jan", "Feb", "Mar", "Apr"};


    //--------------------------------------------------------//
    //Star ratings

    //Initializing the selected value to 0
    private int selectedVal = 0;
    //For storing the hovered value
    private int? activeVal;
    //Sets the hovered value
    private void HandleHoveredValueChanged(int? val) => activeVal = val;
    //Changes the text based on the hovered or selected number of stars
    private string LabelText => (activeVal ?? selectedVal) switch
    {
        1 => "OK",
        2 => "Not bad",
        3 => "Good enough",
        4 => "Great",
        5 => "Amazing!",
        _ => "Rate our website!"
    };
}