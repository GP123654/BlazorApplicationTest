@page "/"


<style>

    .body2 {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 85vh;/*Was 85*/
    margin: 0;
    padding: 0;
    /*background-color: #F3E5F5*/
    }

    .box2 {
        position: absolute; /*relative*/
        width: 200px;
        height: 200px;
        transform-style: preserve-3d;
        animation: animate 30s linear infinite;
    }
    
    @@keyframes animate {
        0% {
            transform: perspective(800px) rotateY(0deg);/*was 800px*/
        }
    
        100% {
            transform: perspective(800px) rotateY(360deg);
        }
    }
    
    .box2 span {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        transform-origin: center;
        transform-style: preserve-3d;
        transform: rotateY(calc(var(--i) * 45deg)) translateZ(400px);/*was 400*/
        -webkit-box-reflect: below 0px linear-gradient(transparent, transparent, #0004);
    }
    
    .box2 span img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }


    @@media (max-width: 980px) {

        .body2 {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 85vh; /*Was 85*/
            /*max-height: 30vh;*/
            margin: 0;
            padding: 0;
            /*background-color: #F3E5F5*/
        }

        .box2 {
            position: absolute; /*relative*/
            width: 150px;
            height: 150px;
            transform-style: preserve-3d;
            animation: animate 30s linear infinite;
        }

        .box2 span {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
