<!-- Name of page so that it can be navigated to -->
@page "/counter"

<PageTitle>Counter</PageTitle>

<h1 style="color:mediumpurple; margin-top: 20px">Counter</h1>

<p>I am a counter and if you click me I will increase my count by: @IncrementAmount each time</p>
<!-- Gets the value of the currentCount variable -->
<p role="status">Current count: @currentCount</p>
<!-- Button that increments the counter by the specified amount defined by the parameter (Calls the IncrementCount Method) -->
<MudButton Variant="Variant.Filled" Color="Color.Primary" Style="border-radius:30px" @onclick="IncrementCount">Click me</MudButton>

@code {
    //Sets the count to 0
    private int currentCount = 0;

    //Parameter used to change the increment amount of the counter
    [Parameter]
    public int IncrementAmount { get; set; } = 1;

    //Increments the count
    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
}
