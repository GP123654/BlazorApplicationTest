<style>

    .a:link, .a:visited
    {
        text-decoration: none;
        color: white;
        margin-right: 10px;
    }

    .a:hover, .a:active {
        text-decoration: none;
        color: #dd99ff;
        margin-right: 10px;
    }

    .button {      
        padding: 8px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 4px 2px;
        cursor: pointer;
    }

    .button2 {
        background-color: rgba(0, 0, 0, 0);
        color: white;
        border: 2px solid white;
        border-radius: 25px;
        margin-left:10px;
    }


    .button:hover {
        background-color: rgba(0, 0, 0, 0);
        color: #dd99ff;
        border: 2px solid white;
        border-radius: 25px;
        margin-left: 10px;
    }

</style>

<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage" class="a">@context.User.Identity?.Name!</a>
        <form method="post" action="Identity/Account/LogOut">
            <button type="submit" class="nav-link btn btn-link button button2">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register" class="a">Register</a>
        <a href="Identity/Account/Login" class="a">Log in</a>
    </NotAuthorized>
</AuthorizeView>
