

<!-- For font awesome icons not using them though -->
<link href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" rel="stylesheet">


<MudPaper Width="250px" Class="d-inline-flex py-3" Elevation="0">
    <MudNavMenu Class="mud-width-full">
        <MudText Typo="Typo.h6" Class="px-4">Gregs Blazor App</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Using MudBlazor</MudText>
        <MudDivider Class="my-2" />

        <MudNavLink Href="/" Icon="oi oi-home" IconColor="Color.Info">Home</MudNavLink>       
        
        <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Info">Dashboard</MudNavLink>

        <MudNavLink Href="/counter" Icon="oi oi-plus" IconColor="Color.Success">Counter</MudNavLink>
        <MudNavLink Href="/fetchdata" Icon="@Icons.Material.Filled.Storage" IconColor="Color.Primary">Fetch data</MudNavLink>
        <MudNavLink Href="/todo" Icon="oi oi-list-rich" IconColor="Color.Warning">Todo</MudNavLink>
        <MudNavLink Href="/authors" Icon="@Icons.Material.Filled.Book" IconColor="Color.Secondary">Authors</MudNavLink>
        <MudNavLink Href="/store" Icon="@Icons.Material.Filled.Store" IconColor="Color.Primary">Store</MudNavLink>
        <MudNavLink Href="/employee" Icon="@Icons.Material.Filled.Person" IconColor="Color.Tertiary">Employees</MudNavLink>
        <MudNavLink Href="/gallery" Icon="@Icons.Material.Filled.Camera" IconColor="Color.Secondary">Gallery</MudNavLink>
        <MudNavLink Href="/subscription" Icon="@Icons.Material.Filled.Subscriptions" IconColor="Color.Primary">Subscriptions</MudNavLink>
        <MudNavLink Href="/aboutUs" Icon="@Icons.Material.Filled.QuestionMark" IconColor="Color.Dark">About Us</MudNavLink>

        <MudNavLink Href="/policyPage" Icon="@Icons.Material.Filled.Notes" IconColor="Color.Error">Policy Page</MudNavLink>
        
        <MudNavLink Href="/sliderTest" Icon="@Icons.Material.Filled.Notes" IconColor="Color.Error">Slider Test</MudNavLink>

        <MudNavGroup Title="UserInfo" Icon="@Icons.Material.Filled.People" IconColor="Color.Info">
            <MudNavLink Href="/users" Icon="@Icons.Material.Filled.PeopleAlt" IconColor="Color.Primary">Users</MudNavLink>
            <MudNavLink Href="/userPageViews" Icon="oi oi-eye" IconColor="Color.Primary">UserPageViews</MudNavLink>
            <MudNavLink Href="/userPages" Icon="@Icons.Material.Filled.PeopleOutline" IconColor="Color.Primary">User Pages</MudNavLink>
        </MudNavGroup>


        <!-- Employee navbar visible items -->

        <AuthorizeView Roles="Employee">
            
            <MudNavGroup Title="Admin Things View Only" Icon="@Icons.Material.Filled.People" IconColor="Color.Info">
                
                <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Info">Dashboard</MudNavLink>
                
                <MudNavGroup Title="User Data" Icon="@Icons.Material.Filled.People" IconColor="Color.Info">
                    <MudNavLink Href="/adminPage" Icon="@Icons.Material.Filled.Settings" IconColor="Color.Error">Admin Page</MudNavLink>
                    <MudNavLink Href="/rolePage" Icon="@Icons.Material.Filled.LockPerson" IconColor="Color.Error">Role -Admin Only Page</MudNavLink>
                </MudNavGroup>

                <MudNavGroup Title="UserInfo" Icon="@Icons.Material.Filled.People" IconColor="Color.Info">
                    <MudNavLink Href="/users" Icon="@Icons.Material.Filled.PeopleAlt" IconColor="Color.Primary">Users</MudNavLink>
                    <MudNavLink Href="/userPageViews" Icon="oi oi-eye" IconColor="Color.Primary">UserPageViews</MudNavLink>
                    <MudNavLink Href="/userPages" Icon="@Icons.Material.Filled.PeopleOutline" IconColor="Color.Primary">User Pages</MudNavLink>
                </MudNavGroup>
            </MudNavGroup>

        </AuthorizeView>


        <!-- Admin navbar visible items -->

        <AuthorizeView Roles="Admin">
            <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Info">Dashboard</MudNavLink>
            <MudNavLink Href="/adminPage" Icon="@Icons.Material.Filled.Settings" IconColor="Color.Error">Admin Page</MudNavLink>
            <MudNavLink Href="/rolePage" Icon="@Icons.Material.Filled.LockPerson" IconColor="Color.Error">Role -Admin Only Page</MudNavLink>            
            <MudNavGroup Title="UserInfo" Icon="@Icons.Material.Filled.People" IconColor="Color.Info">
                <MudNavLink Href="/users" Icon="@Icons.Material.Filled.PeopleAlt" IconColor="Color.Primary">Users</MudNavLink>
                <MudNavLink Href="/userPageViews" Icon="oi oi-eye" IconColor="Color.Primary">UserPageViews</MudNavLink>
                <MudNavLink Href="/userPages" Icon="@Icons.Material.Filled.PeopleOutline" IconColor="Color.Primary">User Pages</MudNavLink>
            </MudNavGroup>
        </AuthorizeView>

    </MudNavMenu>
</MudPaper>



